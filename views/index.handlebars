{{!-- Contents of the main page--}}

<div class="container" style="height : 800px">

    <div class="row justify-content-center mt-5 pt-5">

        <h1 style = "color : #ff5226;">Eat Da Burger!</h1>

    </div>

    <div class="row">
        <div class="col-4 my-5 burger-box py-3">
            <ul id="burger-container" class="burger-devoured-text">

                {{#each burgers}}

                {{#if this.devoured}}

                {{else}}

                <div class="row my-3">

                    <li class="col-6 align-self-center">{{this.burger_name}}</li>

                    <button id="burger-{{this.id}}" type="button" class="btn btn-warning col-4 mr-3">Devour it!</button>

                </div>


                {{/if}}


                {{/each}}

            </ul>
        </div>
        <div class="col-4 my-5 offset-4 burger-box py-3">
            <ul id="eaten-container" class="burger-devoured-text">

                {{#each burgers}}

                {{#if this.devoured}}

                <li id="burger-{{this.id}}">{{this.burger_name}}</li>

                {{/if}}


                {{/each}}

            </ul>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-4 burger-box">
            <div class="input-group row justify-content-center mx-0">
                <div class="input-group-prepend col-12 mx-0">
                    <span class="input-group-text my-2 col-12 mx-0 justify-content-center">Add a burger to the menu!</span>
                </div>
                <div class="row col-12">
                <textarea id = "input-burger" class="form-control col-12" aria-label="With textarea"></textarea>
                </div>

            </div>
                <div class="row col-12 mx-0 justify-content-center">
            <button id="submit-burger" type="button" class="btn btn-warning col-12 my-3 justify-content-center">Add it</button>
                </div>
        </div>
    </div>
</div>