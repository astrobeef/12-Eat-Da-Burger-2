{{!-- Contents of the main page--}}

<div class="container" style="height : 800px">

    <div class="row justify-content-center mt-5 pt-5">

        <h1>Eat Da Burger!</h1>

    </div>

    <div class="row">
        <div class="col-4 border my-5">
            <ul id="burger-container">

                {{#each burgers}}

                {{#if this.devoured}}

                {{else}}

                <div class="row my-3">

                    <li class="col-6 align-self-center">{{this.burger_name}}</li>

                    <button id="burger-{{this.id}}" type="button" class="btn btn-warning col-4 mr-3">Devour it!</button>

                </div>


                {{/if}}


                {{/each}}

            </ul>
        </div>
        <div class="col-4 border my-5 offset-4">
            <ul id="eaten-container" class="text-danger">

                {{#each burgers}}

                {{#if this.devoured}}

                <li id="burger-{{this.id}}">{{this.burger_name}}</li>

                {{/if}}


                {{/each}}

            </ul>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-4 border">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text my-2">Enter the name of the burger you want to eat</span>
                </div>
                <textarea id = "input-burger" class="form-control" aria-label="With textarea"></textarea>

            </div>
            <button id="submit-burger" type="button" class="btn btn-warning col-12 my-3">Devour it!</button>
        </div>
    </div>
</div>